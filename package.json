{
	"name": "squh-picu-med-calculator",
	"prettyName": "SQUH PICU Med Calculator",
	"version": "0.39.0",
	"repository": "bader-nasser/squh-picu-med-calculator",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"update:node": "pnpm update",
		"update:rust": "cargo update --manifest-path src-tauri/Cargo.toml",
		"update-deps": "run-s update:*",
		"generate-schemas": "node generate-schemas.mjs",
		"generate-schemas:watch": "node generate-schemas.mjs --watch",
		"dev-next": "next",
		"dev-tauri": "tauri dev",
		"dev": "run-p generate-schemas:watch dev-next",
		"build-next": "next build --no-lint",
		"build-tauri": "tauri build",
		"build": "run-s generate-schemas build-next",
		"start": "serve out",
		"serve": "run-s build start",
		"tauri": "tauri",
		"tauri-dev": "tauri dev",
		"tauri-build": "tauri build",
		"lint:types": "tsc --noEmit",
		"lint:scripts": "xo",
		"lint:prettier": "prettier --check .",
		"lint:styles": "stylelint \"**/*.css\"",
		"lint:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml -- --check",
		"lint": "run-s lint:*",
		"fmt:scripts": "xo --fix",
		"fmt:prettier": "prettier --write .",
		"fmt:styles": "stylelint \"**/*.css\" --fix",
		"fmt:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml",
		"fmt": "run-s fmt:*",
		"test": "run-s lint",
		"test-build": "run-s test build",
		"amend": "git commit --amend --no-edit --date=\"$(date)\"",
		"amend-q": "git commit --amend --no-edit --date=\"$(date)\" -n",
		"amend-all": "git commit --amend --no-edit --date=\"$(date)\" --all",
		"amend-all-q": "git commit --amend --no-edit --date=\"$(date)\" --all -n",
		"push-f": "git push -f"
	},
	"dependencies": {
		"@ant-design/icons": "^5.1.4",
		"antd": "^5.6.4",
		"localforage": "^1.10.0",
		"next": "^13.4.9",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@tauri-apps/cli": "^1.4.0",
		"@types/node": "^20.4.1",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.6",
		"eslint": "^8.44.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.0",
		"serve": "^14.2.0",
		"stylelint": "^15.10.1",
		"stylelint-config-standard": "^34.0.0",
		"ts-json-schema-generator": "^1.2.0",
		"typescript": "^5.1.6",
		"xo": "^0.54.2"
	},
	"browser": {
		"fs": false,
		"path": false
	},
	"packageManager": "pnpm@8.6.6",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0",
		"npm": ">=9.0.0"
	}
}
